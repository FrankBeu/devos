### selection CTRL+S: to file; CTRL+C: to clipboard

# bindsym $mod+4 exec --no-startup-id "rofi -show drun -font \\"DejaVu 18\\" -run-shell-command '{terminal} -e \\" {cmd}; read -n 1 -s\\"'"
bindsym $mod+5 exec --no-startup-id  flameshot gui -p ~/pictures/flameshot
### all 3 screens
bindsym $mod+6 exec --no-startup-id  flameshot full -p ~/pictures/flameshot
### to clipboard (and folder, too)
bindsym $mod+Shift+6 exec --no-startup-id  flameshot full -c
### 2 s delayed
bindsym $mod+7 exec --no-startup-id  flameshot gui -c -p ~/pictures/flameshot -d 2000
### PowerManagement
### TODO not tested yet: systemctl *
set $Locker i3lock -uec 2e2a31 -p default && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+p mode "$mode_system"

