# ** rofi
#
## ROFI // rofiCommands // <Super> v ## some extra notes that are ignored by Remontoire but maybe of interest to those reading the config file.
bindsym $mod+v exec ~/.config/rofi/cmds/rofiCommands.sh
bindsym $mod+1 exec --no-startup-id "rofi -show drun"
bindsym $mod+Shift+1 exec --no-startup-id "CM_LAUNCHER=rofi clipmenu"
## ROFI // window // <Super> 2 ##
bindsym $mod+2 exec --no-startup-id "rofi -show window"
bindsym $mod+Shift+2 exec . /home/frank/.config/rofi/cmds/rofiGopass.zsh Password
bindsym $mod+3 exec --no-startup-id "rofi -show run"
bindsym $mod+Shift+3 exec . /home/frank/.config/rofi/cmds/rofiGopass.zsh Username
bindsym $mod+4 exec --no-startup-id "rofi-surfraw"
bindsym $mod+Shift+4 exec . /home/frank/.config/rofi/cmds/rofiGopass.zsh Comment
bindsym $mod+Shift+5 exec --no-startup-id "rofi -show ssh"


###############################################################################
###  other doubled
#
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+f focus parent; fullscreen; focus child
###───────────────────────────────────────────────────────────────────────── SPLIT IN HORIZONTAL ORIENTATION
bindsym $mod+g split h
###───────────────────────────────────────────────────────────────────────── SPLIT IN VERTICAL ORIENTATION
bindsym $mod+b split v

###############################################################################
###  mode OLD-MOD-LEFT-HAND
#
mode "$oldModLeftHand" {
    ###───────────────────────────────────────────────────────────────────────── KILL FOCUSED WINDOW
    bindsym $mod+Shift+q kill
    ###───────────────────────────────────────────────────────────────────────── SPLIT IN HORIZONTAL ORIENTATION
    bindsym $mod+c split h
    ###───────────────────────────────────────────────────────────────────────── SPLIT IN VERTICAL ORIENTATION
    bindsym $mod+v split v
    ###───────────────────────────────────────────────────────────────────────── ENTER FULLSCREEN MODE
    bindsym $mod+f fullscreen toggle
    ###───────────────────────────────────────────────────────────────────────── CHANGE CONTAINER LAYOUT
    ### (stacked, tabbed, toggle split)
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split
    ###───────────────────────────────────────────────────────────────────────── FOCUS THE PARENT CONTAINER
    bindsym $mod+a focus parent
    ###───────────────────────────────────────────────────────────────────────── FOCUS THE CHILD CONTAINER
    bindsym $mod+Shift+a focus child
    ###───────────────────────────────────────────────────────────────────────── BORDER TOGGLE
    bindsym $mod+b border toggle
    ###───────────────────────────────────────────────────────────────────────── RELOAD THE CONFIGURATION FILE
    bindsym $mod+Shift+c reload
    # bindsym $alt+Shift+c reload
    ### restart i3 inplace (preserves your layout/session, can be used to upgrade I3)
    bindsym $mod+Shift+r restart
    ### exit i3 (logs you out of your X session)
    #bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shOrtcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
    bindsym $mod+Shift+e exec i3-msg exit
    ###############################################################################
    ###  highlight cursor
    #
    # bindsym $mod+x exec /home/frank/builds/find-cursor/find-cursor -g -w 400 -l 4 -f -s 200 -c orange
    # bindsym $mod+x exec /home/frank/builds/find-cursor/find-cursor -g -w 400 -l 4 -f -s 200 -c '#AF3A03'
    bindsym $mod+Shift+x exec /home/frank/builds/find-cursor/find-cursor -w 20 -l 4 -d 200 -s 1000 -c '#AF3A03'
    bindsym $mod+x exec /home/frank/builds/find-cursor/find-cursor -g -f -w 20 -l 1 -s 125 -d 1 -c '#AF3A03'
    ###############################################################################
    ###  rofi  doubled
    #
    bindsym $mod+d exec --no-startup-id "rofi -show run"
    bindsym $mod+Shift+d  exec --no-startup-id "rofi -show window"
    ###############################################################################
    ###  back to normal: Enter or Escape
    #
    bindsym Return mode "default"
    bindsym Escape mode "default"

}

bindsym $mod+y mode "$oldModLeftHand"

